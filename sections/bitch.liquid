<h1 class="bitches">{{ section.settings.my_id }}</h1>
{% for block in section.blocks %}
  {% case block.type %}
    {% when 'slide' %}
      <div class="slide" {{ block.shopify_attributes }}>
        {{ block.settings.image | image_url: width: 2048 | image_tag }}
      </div>
      ...
  {% endcase %}
{% endfor %}

<style>
  .bitches {
    color: {{ section.settings.color }};
  }
</style>

{% schema %}

{
  "name": "bitch",
  "settings": [
    {
      "type": "text",
      "id": "my_id",
      "label": "My setting label",
      "default": "Enter text here"
    }, {
      "type": "color",
      "id": "color",
      "label": "THIS IS THE COLOR BITCH"
    }
  ],
  "blocks": [
    {
      "name": "Accordion",
      "type": "accordion",
      "settings": [
        {
          "type": "text",
          "id": "heading_text",
          "label": "Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "BITCH"
    }
  ]
}

{% endschema %}
